<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTimeTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:text="TimeTable"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#6B0CF3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/monbtn"
                android:layout_width="69dp"
                android:layout_height="40dp"
                android:text="MON" />

            <Button
                android:id="@+id/tuebtn"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:text="TUE" />


            <Button
                android:id="@+id/wedbtn"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:text="WED" />

            <Button
                android:id="@+id/thubtn"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:text="THU" />

            <Button
                android:id="@+id/fribtn"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:text="FRI" />

            <Button
                android:id="@+id/satbtn"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:text="SAT" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/sub_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:background="#2196F3"
                    android:text="Subject"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textColor="#000000" />

                <ListView
                    android:id="@+id/sub_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#6FC7EF"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/staff_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:background="#2196F3"
                    android:text="Staff"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textColor="#000000" />

                <ListView
                    android:id="@+id/staff_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#6FC7EF"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/timing_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:background="#2196F3"
                    android:text="Timing"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textColor="#000000" />

                <ListView
                    android:id="@+id/timing_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#6FC7EF"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>