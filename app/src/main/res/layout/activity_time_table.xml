<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".TimeTable">

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="TimeTable"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#92FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:text="Day :"
            android:textColor="#0B0A0A" />

        <Spinner
            android:id="@+id/spinnerday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#FAFAFA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject_tt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:text="Subject :"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"
            android:textColor="#0B0A0A" />

        <EditText
            android:id="@+id/subtxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Subject Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staff_tt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"
            android:text="Staff :"
            android:textColor="#0B0A0A" />

        <EditText
            android:id="@+id/stafftxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Staff Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_tt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"
            android:text="Timing :"
            android:textColor="#0B0A0A" />

        <EditText
            android:id="@+id/timetxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Eg : 9:00 Am to 10:00 Am " />

    </LinearLayout>

    <Button
        android:id="@+id/postbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update" />

</LinearLayout>